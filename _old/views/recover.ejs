<head>
    <%- include('./partials/adheaders'); %>
    <style>
      body {
          background-image: url('https://throwdown.tv/bg.jpg');
          background-attachment: fixed;
          background-position: center;
          background-repeat: no-repeat;
          background-size: cover;
      }
    </style>
  </head>
  <%- include('./partials/header'); %>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="background-color: rgb(211, 245, 255);">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Recover Account</h1>
        <%- include('./partials/messages'); %>
          <form id="loginform" action="/users/recover" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Recover</button>
          </form>
      </div>
    </div>
  </div>
  <%- include('./partials/googlead'); %>